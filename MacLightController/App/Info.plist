<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App runs as menu bar app (no Dock icon by default) -->
    <key>LSUIElement</key>
    <true/>

    <!-- Minimum macOS version -->
    <key>LSMinimumSystemVersion</key>
    <string>13.0</string>

    <!-- Architecture priority -->
    <key>LSArchitecturePriority</key>
    <array>
        <string>arm64</string>
    </array>

    <!-- Bundle information -->
    <key>CFBundleName</key>
    <string>MacLightController</string>

    <key>CFBundleDisplayName</key>
    <string>MacLightController</string>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <key>CFBundleVersion</key>
    <string>1</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <!-- Location usage descriptions -->
    <key>NSLocationUsageDescription</key>
    <string>MacLightController usa la tua posizione per calcolare gli orari di alba e tramonto per le automazioni.</string>

    <key>NSLocationWhenInUseUsageDescription</key>
    <string>La posizione è usata solo per calcolare alba e tramonto per le automazioni temporizzate.</string>

    <!-- Human-readable copyright -->
    <key>NSHumanReadableCopyright</key>
    <string>Copyright © 2024 MacLightController. Tutti i diritti riservati.</string>

    <!-- Application category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>

    <!-- Supports high resolution -->
    <key>NSHighResolutionCapable</key>
    <true/>

    <!-- Required device capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
    </array>
</dict>
</plist>
